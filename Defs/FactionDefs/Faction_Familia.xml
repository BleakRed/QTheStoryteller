<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <FactionDef ParentName="FactionBase">
    <defName>FoocubusFamilia</defName>
    <label>the familia</label>
    <description>A hyper-advanced syndicate of Foocubi, structured more like a family than a nation. Though their speech is soft and their gestures kind, their power is that of the gods themselves.</description>
    <pawnSingular>familian</pawnSingular>
    <pawnsPlural>familians</pawnsPlural>
    <categoryTag>FoocubusFamilia</categoryTag>
    <leaderTitle>matron</leaderTitle>
    <factionIconPath>World/WorldObjects/Expanding/Town</factionIconPath>
    <settlementTexturePath>UI/XenoIcon/Foobucus</settlementTexturePath>
    <factionNameMaker>NamerFactionFamilia</factionNameMaker>
    <settlementNameMaker>NamerSettlementFamilia</settlementNameMaker>
    <techLevel>Spacer</techLevel>
    <classicIdeo>true</classicIdeo>

    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>
    <configurationListOrderPriority>90</configurationListOrderPriority>

    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>

    <allowedCultures>
      <li>Astropolitan</li>
    </allowedCultures>
    <structureMemeWeights>
      <Structure_Archist MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Archist>
    </structureMemeWeights>
    <requiredMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">Collectivist</li>
    </requiredMemes>
    <allowedMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">Collectivist</li>
    </allowedMemes>
    <xenotypeSet>
      <xenotypeChances>
        <BR_FoocubusXeno MayRequire="Ludeon.RimWorld.Biotech">0.85</BR_FoocubusXeno>
        <Genie MayRequire="Ludeon.RimWorld.Biotech">0.05</Genie>
        <Waster MayRequire="Ludeon.RimWorld.Biotech">0.05</Waster>
        <Highmate MayRequire="Ludeon.RimWorld.Biotech">0.05</Highmate>
      </xenotypeChances>
    </xenotypeSet>

    <allowedArrivalTemperatureRange>
      <min>-50</min>
      <max>50</max>
    </allowedArrivalTemperatureRange>

    <colorSpectrum>
      <li>(0.85, 0.40, 0.70)</li>
      <li>(0.50, 0.10, 0.90)</li>
    </colorSpectrum>

    <raidLootMaker>FamiliaRaidLootMaker</raidLootMaker>

    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0, 60)</li>
        <li>(1000, 150)</li>
        <li>(2000, 300)</li>
        <li>(4000, 600)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>

    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <Mercenary_Gunner>10</Mercenary_Gunner>
          <Mercenary_Elite>12</Mercenary_Elite>
          <Town_Councilman>5</Town_Councilman>
          <Grenadier_Destructive>3</Grenadier_Destructive>
        </options>
      </li>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <Villager>10</Villager>
          <Town_Councilman>6</Town_Councilman>
          <Villager_Child>4</Villager_Child>
        </options>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <Villager>10</Villager>
          <Mercenary_Gunner>6</Mercenary_Gunner>
          <Town_Guard>6</Town_Guard>
          <Town_Councilman>6</Town_Councilman>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <Town_Trader>1</Town_Trader>
        </traders>
        <carriers>
          <Muffalo>2</Muffalo>
          <Elephant>1</Elephant>
        </carriers>
        <guards>
          <Mercenary_Gunner>3</Mercenary_Gunner>
          <Town_Guard>2</Town_Guard>
        </guards>
      </li>
    </pawnGroupMakers>

    <backstoryFilters>
      <li>
        <categories>
          <li>Outlander</li>
        </categories>
        <commonality>1</commonality>
      </li>
    </backstoryFilters>
  </FactionDef>

  <!-- Loot -->
  <ThingSetMakerDef>
    <defName>FamiliaRaidLootMaker</defName>
    <root Class="ThingSetMaker_MarketValue">
      <fixedParams>
        <filter>
          <thingDefs>
            <li>Silver</li>
            <li>Plasteel</li>
            <li>Luciferium</li>
            <li>Neurotrainer</li>
            <li>PsylinkNeuroformer</li>
            <li>GoJuice</li>
          </thingDefs>
        </filter>
      </fixedParams>
    </root>
  </ThingSetMakerDef>

  <!-- NAME GENERATORS -->

  <!-- Fix these parts -->
  <RulePackDef>
    <defName>NamerFactionFamilia</defName>
    <rulePack>
      <rulesStrings>
        <!-- these 2 were causing errors -->
        <!-- <li>Family of Families</li>
        <li>Family of Familia</li> -->
        <li>r_name->Family of [familian_name]</li>
        <li>familian_name->[Familiaz]</li>
        <li>familian_name->[Familiaz][townsuffix]</li>
        <li>townsuffix->ium</li>
        <li>townsuffix->lor</li>
        <li>townsuffix->phor</li>
        <li>townsuffix->lios</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>NamerSettlementFamilia</defName>
    <rulePack>
      <rulesStrings>
        <li>r_name->[Familiaz][settlementend]</li>
        <li>settlementend->heim</li>
        <li>settlementend->lan</li>
        <li>settlementend->dom</li>
        <li>settlementend->gard</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

</Defs>
